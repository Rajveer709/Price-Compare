# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./price_compare.db  # SQLite by default, override for PostgreSQL

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# eBay API Settings
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret
EBAY_REDIRECT_URI=your_ebay_redirect_uri
EBAY_MAX_CALLS_PER_DAY=4900  # Stay under 5,000/day limit
EBAY_REQUESTS_PER_SECOND=0.3  # ~3 requests per second

# Feature Flags
ENABLE_EBAY_API=true
ENABLE_AMAZON_API=false

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Rate Limiting
RATE_LIMIT=100/minute
EBAY_RATE_LIMIT=0.3  # ~3 requests per second

# Cache TTLs (in seconds)
EBAY_TOKEN_CACHE_TTL=7000     # ~2 hours
EBAY_PRODUCT_CACHE_TTL=86400  # 24 hours
EBAY_SEARCH_CACHE_TTL=3600    # 1 hour

# Google Safe Browsing
GOOGLE_SAFE_BROWSING_API_KEY=your_google_safe_browsing_api_key
ENABLE_SAFE_BROWSING=true

# CAPTCHA Solving
ANTICAPTCHA_KEY=your_anti_captcha_key

# Notification Settings
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_NOTIFICATIONS=False
EMAIL_FROM=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_TO=recipient1@example.com,recipient2@example.com

# Scheduler Settings
SCHEDULER_TIMEZONE=UTC
DAILY_SCRAPE_TIME=02:00

# Request Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
DELAY_BETWEEN_REQUESTS=5
