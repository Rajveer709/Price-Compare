# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=price_compare

# MongoDB Configuration (alternative to PostgreSQL)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=price_compare

# Proxy Configuration
PROXY_ENABLED=False
PROXY_LIST=proxy1.example.com:8080,proxy2.example.com:8080
PROXY_USER=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# CAPTCHA Solving
ANTICAPTCHA_KEY=your_anti_captcha_key

# Notification Settings
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_NOTIFICATIONS=False
EMAIL_FROM=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_TO=recipient1@example.com,recipient2@example.com

# Scheduler Settings
SCHEDULER_TIMEZONE=UTC
DAILY_SCRAPE_TIME=02:00

# Request Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
DELAY_BETWEEN_REQUESTS=5
