# Database
DATABASE_URL=sqlite:///./price_compare.db

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Amazon PA-API Credentials
# Get these from Amazon Associates Central -> Product Advertising API
AMAZON_PAAPI_ACCESS_KEY=your-access-key-here
AMAZON_PAAPI_SECRET_KEY=your-secret-key-here
AMAZON_PARTNER_TAG=your-associate-tag-20
AMAZON_PAAPI_REGION=us-east-1

# CORS (comma-separated list of allowed origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT=100/minute

# Frontend (if needed)
VITE_API_BASE_URL=/api/v1
